<Window x:Class="trackvisualizer.View.Inputbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DimWnd" Height="322" Width="549" AllowsTransparency="True" Background="#7f000000" WindowStyle="None"
        WindowState="Maximized" Name="MainWndDim">
    <Grid>
        <Border Background="White" VerticalAlignment="Center" Height="80" Width="320" Margin="100,0,100,0"
                CornerRadius="10" Padding="10">
            <Grid>
                <TextBlock Text="??" FontSize="14" FontWeight="Bold" Foreground="LightSlateGray" Name="DescrTxt"
                           VerticalAlignment="Top" HorizontalAlignment="Center" />

                <TextBox VerticalAlignment="Top" Margin="5,20,61,0" Height="19.277" Name="EnteredValue" />
                <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="20" Margin="0,20,0,0" Content="v"
                        Background="LightGreen" Name="Ok" Click="Ok_Click" />
                <Button VerticalAlignment="Top" HorizontalAlignment="Right" Width="20" Margin="0,20,30,0" Content="x"
                        Background="MistyRose" Name="Cancel" Click="Cancel_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>